<div class="col-12 col-md-3">
  <%= link_to project, class:"m-3" do %>
    <div class="card Box__my_project_card align-items-center">
      <div class="card-body align-items-center Box__my_project_card_centered text-center">
        <div><h5 class="card-title  ">  <%= project.name %></h5></div>
        <div class="badge bage bage__bottom">
          Залишилось <%= project.finish_at.day - DateTime.now.day%> днів
        </div>
      </div>
    </div>
  <%end%>
</div>
