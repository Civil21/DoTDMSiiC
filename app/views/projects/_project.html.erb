<div class="col-12 m-3">
  <div class="card">
    <div class="card-body">
      <div class="d-flex row">
        <div class="d-flex justify-content-between mb-4 mt-4 ">
          <span class="Box__title">
            <%= project.name %>
            <%= link_to  do %>
              <%= image_tag "info-circle.svg", width:24, height:24 %>
            <% end %>
          </span>
          <div class="badge bg-secondary Box__badge">
            залишилось <%= project.finish_at.day - DateTime.now.day%> днів
          </div>
        </div>
        <div class="d-flex justify-content-between align-items-end">
          <div class="d-flex row">
            <span class="mb-3 text-secondary">
              Старт: <span class="ms-3 text-dark fw-bolder"><%= project.start_at.strftime("%e.%m.%Y")%></span>
            </span>
            <span class="mb-3 text-secondary">
              Фініш: <span class="ms-3 text-dark fw-bolder"><%= project.finish_at.strftime("%e.%m.%Y")%></span>
            </span>
          </div>
          <div class="d-flex col row">
            <span class="Box__infotitle">Бюджет</span>
            <span class="Box__infotxt"><%=project.budget%>$</span>
          </div>
          <div class="d-flex col row">
            <span class="Box__infotitle">Виконано</span>
            <span class="Box__infotxt"><%= project.completed_tasks_count %> iз <%= project.tasks_count %></span>
          </div>
          <%=link_to "Приєднатись", join_project_path(project), method: :post, class:"btn__card"%>
        </div>
      </div>
    </div>
  </div>
</div>